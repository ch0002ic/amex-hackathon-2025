# Frontend API base URL
# When running everything locally on default ports, this can stay commented out
VITE_API_URL=http://localhost:5050/api

# Frontend telemetry controls
VITE_ENABLE_WEB_OTEL=false
VITE_OTEL_SERVICE_NAME=ecosystem-intelligence-web
VITE_OTEL_EXPORTER_CONSOLE=true
VITE_OTEL_EXPORTER_OTLP_URL=
VITE_OTEL_EXPORTER_OTLP_HEADERS=

# Optional Redis connection string for distributed caching
# Leave unset to fall back to in-memory TTL cache during local development
REDIS_URL=redis://localhost:6379

# Backend telemetry (OpenTelemetry) controls
ENABLE_OTEL=false
OTEL_EXPORTER_CONSOLE=true
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_EXPORTER_OTLP_HEADERS=

# Live analytics real-time stream
LIVE_ANALYTICS_STREAM_URL=
LIVE_ANALYTICS_STREAM_PATH=storage/live-analytics-stream.ndjson
LIVE_ANALYTICS_STREAM_POLL_SECONDS=15

# Identity provider integration for RBAC hardening
ENABLE_IDP_INTEGRATION=false
IDP_REQUIRE_TOKEN=false
IDP_JWKS_URL=
IDP_ISSUER=
IDP_AUDIENCE=
IDP_ROLE_CLAIM=role
IDP_USER_ID_CLAIM=sub
IDP_USER_NAME_CLAIM=name
IDP_GROUPS_CLAIM=groups
IDP_MODERATOR_GROUPS=amex:ecosystem:moderators
