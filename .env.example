# Frontend API base URL
# When running everything locally on default ports, this can stay commented out
VITE_API_URL=http://localhost:5050/api

# Frontend telemetry controls
VITE_ENABLE_WEB_OTEL=false
VITE_OTEL_SERVICE_NAME=ecosystem-intelligence-web
VITE_OTEL_EXPORTER_CONSOLE=true
VITE_OTEL_EXPORTER_OTLP_URL=
VITE_OTEL_EXPORTER_OTLP_HEADERS=

# Optional Redis connection string for distributed caching
# Leave unset to fall back to in-memory TTL cache during local development
REDIS_URL=redis://localhost:6379

# Backend telemetry (OpenTelemetry) controls
ENABLE_OTEL=false
OTEL_EXPORTER_CONSOLE=true
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_EXPORTER_OTLP_HEADERS=

# Live analytics real-time stream
LIVE_ANALYTICS_STREAM_URL=
LIVE_ANALYTICS_STREAM_PATH=storage/live-analytics-stream.ndjson
LIVE_ANALYTICS_STREAM_POLL_SECONDS=15
LIVE_ANALYTICS_KAFKA_BROKERS=
LIVE_ANALYTICS_KAFKA_TOPIC=live-analytics
LIVE_ANALYTICS_KAFKA_GROUP_ID=ecosystem-live-analytics
LIVE_ANALYTICS_KAFKA_CLIENT_ID=ecosystem-live-analytics
LIVE_ANALYTICS_KAFKA_MAX_EVENTS=240
LIVE_ANALYTICS_KAFKA_SSL=false
LIVE_ANALYTICS_KAFKA_SASL_MECHANISM=
LIVE_ANALYTICS_KAFKA_USERNAME=
LIVE_ANALYTICS_KAFKA_PASSWORD=
LIVE_ANALYTICS_SCHEMA_REGISTRY_URL=
LIVE_ANALYTICS_SCHEMA_REGISTRY_BASIC_USER=
LIVE_ANALYTICS_SCHEMA_REGISTRY_BASIC_PASSWORD=
LIVE_ANALYTICS_SCHEMA_REGISTRY_BEARER_TOKEN=
LIVE_ANALYTICS_SCHEMA_REGISTRY_CLIENT_ID=

# Metrics and SLO monitoring
METRICS_PREFIX=ecosystem_
METRICS_REFRESH_INTERVAL_MS=60000
PARTNER_SIGNAL_SLO_TARGET_MINUTES=60
PARTNER_SIGNAL_LATENCY_BUCKETS=60,120,300,600,900,1800,3600,7200,14400,28800,86400
PARTNER_SIGNAL_METRICS_LOOKBACK_MINUTES=360
SLO_ALERT_SLACK_WEBHOOK=
SLO_ALERT_SLACK_CHANNEL=#ecosystem-oncall
SLO_ALERT_TEAMS_WEBHOOK=
SLO_ALERT_ONCALL_HANDOFF_MINUTES=5

# Identity provider integration for RBAC hardening
ENABLE_IDP_INTEGRATION=false
IDP_REQUIRE_TOKEN=false
IDP_JWKS_URL=
IDP_ISSUER=
IDP_AUDIENCE=
IDP_ROLE_CLAIM=role
IDP_USER_ID_CLAIM=sub
IDP_USER_NAME_CLAIM=name
IDP_GROUPS_CLAIM=groups
IDP_MODERATOR_GROUPS=amex:ecosystem:moderators
IDP_JWKS_ROTATE_MINUTES=60

# SCIM / Okta Workflows provisioning
IDP_SCIM_BASE_URL=
IDP_SCIM_TOKEN=
IDP_SCIM_GROUP_IDS=

# Shadow approval queue (tiered moderation pilot)
SHADOW_APPROVAL_QUEUE_ENABLED=true
SHADOW_APPROVAL_QUEUE_GROUPS=ecosystem-shadow-approvers
SHADOW_APPROVAL_QUEUE_TIER=pilot
